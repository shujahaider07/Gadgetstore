@model IEnumerable<EntitiesViewModels.productListVm>

@{
    ViewData["Title"] = "Listproduct";
}

<h1>Listproduct</h1>

<p>
    <a asp-action="Addproduct">Create New</a>
</p>
<table class="table table-bordered table-hover table-striped" id="Producttbl">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          @*  <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>*@

            <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>

            <td>
                @Html.ActionLink("Edit", "Updateproduct", new { id=item.ProductId}) |
                @Html.ActionLink("Details", "Details", new { id=item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ProductId})
            </td>
        </tr>
}
    </tbody>
</table>
